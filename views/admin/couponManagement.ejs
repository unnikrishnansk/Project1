<%-include('adminNavbar')%>


  <div class="container mt-5 mb-5 ">
    <div class="row  ">
      <div class="col-lg-12 grid-margin stretch-card ">
        <div class="card g-white shadow">
          <div class="card-body ">
            <div class="row d-flex justify-content-between">
              <div class="col-lg-4">
                <h4 class="card-title m-4 ">Coupon List</h4>
              </div>
              <div class="col-lg-8 text-end">
                <div class="row mb-5">
                    <div class="col ">

                      <a href="/admin/couponmanagement"><button class="btn btn-primary m-4">All coupons </button></a>
                     
                            <a href="/admin/listedcoupons"><button class="btn btn-primary m-4">Listed </button></a>
                   
                            <a href="/admin/unlistedcoupons"><button class="btn btn-primary m-4">Unlisted </button></a>
                       
                        <a href="/admin/addcoupon"><button class="btn btn-primary m-4"> Add Coupons</button></a>
                    </div>
                </div>
              </div>
            </div>
           <span id="err"></span>
            <table class="table table-striped pt-4 shadow">
              <thead class="p-1 shadow" >
                <tr >
                  <th> Coupon Id </th>
                  <th> Name  </th>
                  <th> Discount</th>
                  <th> Min Amount </th>
                  <th> Exp. Date </th>
                  
                </tr>
              </thead>
              <tbody id="body">
          <% coupons.forEach((coupon)=>{ %>

         

                <tr >
                 
                  <td>
                    <%= coupon.couponId %>
                   </td>
                  <td>
                    <%= coupon.couponCode %>
                  </td>
                 
                  <td >
                    <%= coupon.couponDiscount %>% 
                  </td>
                  <td>
                    <%= coupon.minPurchaseAmnt %>
                  </td>
                  <td>
                    <%= coupon.expiryDate %>
                  </td>
                  <td>
                    <a href="">
                        <a type="btn" class="btn btn-outline-primary" href="/admin/editcoupon?couponid=<%=coupon.couponId%>" >Edit</a>
                    </a>                  
                  </td>
                  <td>
                    <a type="btn" class="btn btn-outline-primary" href="/admin/discardcoupon?couponid=<%=coupon.couponId%>">Discard</a>
                  </td>
                  <td>
                 <% if(coupon.couponStatus == false){ %>
                  <a type="btn" class="btn btn-outline-primary" href="/admin/listcoupon?couponid=<%=coupon.couponId%>" >List</a>
                 <% }else{ %>
                  <a type="btn" class="btn btn-outline-primary" href="/admin/listcoupon?couponid=<%=coupon.couponId%>" >Unlist</a>
                 <% } %>
                      
                  
                  </td>
                </tr>
                <% }) %>
          </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>